<% if user_signed_in? %>
	<div class="col-lg-10 col-md-offset-1">
		<% @items.each do |f| %>
			<div class="index-wrapper">
				<% if f.completed? %>
					<div class="row item ">

						<div class="col-md-2">
							<p><%= link_to complete_item_path(f), method: :patch do %></p>
								<i class="fa fa-check fa-lg"></i>
							<% end %>
						</div>

						<div class="col-md-2">
							<p><%= link_to f, method: :delete, data: {confirm:"are you sure?"} do %></p>
								<i class="fa fa-trash fa-lg"></i>
							<% end %>
						</div>
		
						<div class="col-md-8">
							<h3><strike><%= link_to f.title %></strike></h3>
							<p><%= f.description %></p>
							<p>completed <%= time_ago_in_words(f.created_at) %> ago</p>
						</div>
					</div>
				<% else %>
					<div class="row item">
						<div class="col-md-2">
							<p><%= link_to complete_item_path(f), method: :patch do %></p>
								<i class="fa fa-check fa-lg"></i>
							<% end %>
						</div>

						<div class="col-md-8">
							<h3><%= link_to f.title %></h3>
							<p><%= f.description %></p>
							<p>Created <%= time_ago_in_words(f.created_at) %> ago</p>
						</div>

						 <div class="col-md-2">
							<p><%= link_to f, method: :delete, data: {confirm:"are you sure?"} do %></p>
								<i class="fa fa-trash fa-lg"></i>
							<% end %>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
 
<% else %>
	<%= render 'welcome_page' %>
<% end %>
 